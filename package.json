{
  "name": "wow-backup-manager",
  "version": "1.0.0",
  "description": "World of Warcraft Addon & Settings Backup Manager",
  "main": "dist/main.js",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main.js && electron .\" \"npm run serve\"",
    "build:watch": "tsc --watch",
    "serve": "live-server public --port=3000",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.wowbackup.manager",
    "productName": "WoW Backup Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../7z.exe",
        "to": "7z.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.0.0",
    "concurrently": "^7.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "node-cron": "^3.0.2"
  }
}
