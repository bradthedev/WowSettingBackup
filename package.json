{
    "name": "wow-backup-manager",
    "version": "1.0.1",
    "description": "A modern backup solution for World of Warcraft addons and settings",
    "main": "dist/main/main.js",
    "scripts": {
        "start": "npm run build && electron .",
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "tsc -w -p tsconfig.main.json",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "vite build",
        "dist": "npm run build && electron-builder",
        "dist:all": "npm run build && electron-builder -mwl",
        "dist:mac": "npm run build && electron-builder --mac",
        "dist:win": "npm run build && electron-builder --win",
        "dist:linux": "npm run build && electron-builder --linux",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "wow",
        "backup",
        "electron",
        "react",
        "typescript"
    ],
    "author": {
        "name": "Bradley Collins",
        "email": "bradley@example.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/archiver": "^6.0.3",
        "@types/node": "^20.10.0",
        "@types/node-7z": "^2.1.10",
        "@types/node-schedule": "^2.1.8",
        "@types/react": "^18.2.42",
        "@types/react-dom": "^18.2.17",
        "@types/yauzl": "^2.10.3",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1",
        "electron-builder-squirrel-windows": "^24.13.3",
        "electron-icon-builder": "^2.0.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.3.2",
        "vite": "^5.0.5"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.14.19",
        "@mui/material": "^5.14.20",
        "@mui/x-date-pickers": "^6.18.3",
        "archiver": "^6.0.1",
        "clsx": "^2.1.1",
        "date-fns": "^2.30.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "lucide-react": "^0.542.0",
        "node-7z": "^3.0.0",
        "node-schedule": "^2.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "unzipper": "^0.10.14",
        "winston": "^3.11.0",
        "yauzl": "^3.2.0"
    },
    "build": {
        "appId": "com.yourcompany.wowbackup",
        "productName": "WoW Backup Manager",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "assets/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}
